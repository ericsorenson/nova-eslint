{
  "name": "nova-eslint",
  "version": "1.0.1",
  "description": "ESLint integration for the Nova code editor",
  "private": true,
  "scripts": {
    "test": "node --test 'test/**/*.test.js'",
    "test:coverage": "node --test --experimental-test-coverage --test-coverage-exclude='test/**' 'test/**/*.test.js'",
    "lint": "eslint eslint.novaextension test eslint.config.mjs",
    "lint:fix": "eslint --fix eslint.novaextension test eslint.config.mjs",
    "renovate": "renovate --platform=local",
    "renovate:config": "renovate-config-validator",
    "update": "ncu -u"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/esorenson/nova-eslint.git"
  },
  "keywords": [
    "nova",
    "extension",
    "eslint",
    "linter"
  ],
  "author": "Eric Sorenson",
  "license": "MIT",
  "dependencies": {
    "@eslint/js": "10.0.1",
    "eslint": "10.0.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-perfectionist": "5.6.0",
    "eslint-plugin-prettier": "5.5.5",
    "npm-check-updates": "19.6.3",
    "prettier": "3.8.1"
  },
  "devDependencies": {},
  "overrides": {
    "eslint": "10.0.2"
  }
}
